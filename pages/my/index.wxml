<view class="container">
    <view class="userinfo">
        <image wx:if="{{userInfo && userInfo.avatarUrl}}" class="userinfo-avatar" src="{{ userInfo.avatarUrl }}"
               background-size="cover"></image>
        <text class="userinfo-nickname">{{ userInfo.nickName }}</text>
    </view>


    <view class="my-item" bindtap="bindPhoneNumber">
        <view class="phone-str">
            <image src="/images/phone-icon.png" mode="aspectFit"></image>
            <text>{{userPhone?userPhone:'为了你的账号安全，请绑定手机号'}}</text>
        </view>
        <view class="bind-phone-btn">
            <text class="arrow-right"></text>
        </view>
    </view>


    <view class="my-score">
        <view class="score-title">
            <text>我的积分：{{scoreNumber}}</text>
            <text class="arrow-right"></text>
        </view>
        <view class="score-item-box">
            <view class="score-item">
                <image src="/images/icon-cart.png" mode="widthFix"></image>
                <view>积分规则</view>
            </view>
        </view>
    </view>

    <view class="my-share">
        <view class="share-title">
            <text>推广有奖</text>
            <text class="arrow-right"></text>

        </view>
        <view class="share-item-box">
            <view class="share-item">
                <image src="/images/icon-cart.png" mode="widthFix"></image>
                <view>推广政策</view>
            </view>
            <view class="share-item">
                <image src="/images/icon-cart.png" mode="widthFix"></image>
                <view>我的海报</view>
            </view>
        </view>
    </view>
</view>