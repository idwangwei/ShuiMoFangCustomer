@import "/wxParse/wxParse.wxss";

.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}
.summery-pic-container{
  width: 100%;
}
.summery-pic-container image{
  width: 100%;
}

.goods-info{
  background-color: #fff;
  padding: 32rpx 0;
  margin-bottom: 24rpx;
  width: 100%;
  position: relative;
}
.goods-info-fx {
  position: absolute;
  right: 16rpx;
  top: 0;
  display:flex;
  flex-direction:column;
  align-items:center;
}
.goods-info-fx button {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 0;
  left: 0;
  z-index: 2;
  opacity: 0;
}
.goods-info-fx image {
  width: 80rpx;
  height: 80rpx;
}
.goods-info-fx text {
  font-size: 24rpx;
  color: #5a5a5a;
  text-align: center;
}
.goods-info .goods-title{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
  margin-bottom: 10rpx;
  padding-right: 60px;
}
.goods-info .goods-share{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 25rpx;
  line-height: 1.4;
  color: #CC0000;
  margin-bottom: 28rpx;
}
.goods-info .goods-price{
   box-sizing:border-box;
   color:#e64340;
   font-size: 28rpx;
   font-weight: bold;
   float:left;
}

.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:28rpx;
  color:#000000;
  padding: 30rpx;
}
.goods-text{
  padding: 0 10rpx;
  margin-bottom: 30rpx;
  min-height: 5vh;
}
.goods-text image{
  width: 100%;
}

.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
  justify-content: space-between;
}

.footer-box .now-buy{
  text-align: center;
  height: 100%;
  width: 250rpx;
  line-height: 100rpx;
  background-color: #e64340;
  color:#fff;
  font-size: 34rpx;
}

.custom-service-btn{
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #dadada;
  z-index: 6;
  top: 40%;
}
.pop-goods-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 60rpx 30rpx 30rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  position: relative;
}
.pop-img-box{
  width: 216rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
  width: 216rpx;
  height: 120rpx;
}
.pop-goods-des{
  flex: 1;
  font-size:34rpx;
}
.pop-goods-title{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color:#000000;
}
.pop-goods-price{
  color:#e64340;
  margin-top:20rpx;
}
.pop-goods-close{
  position: absolute;
  top: 16rpx;
  right: 30rpx;
  width: 48rpx;
  height: 48rpx;

}
.pop-goods-close image{
  width: 100%;
  height: 100%;
}


.popup-join-btn{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e64340;
  position:absolute;
  bottom:0;

}
.form-box{
  width:100%;
  background-color: #fff;
}
.row-wrap{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  background-color: #fff;
}
.row-wrap .label{
  width: 160rpx;
  margin-left: 35rpx;
  color: #000
}
picker {
  min-width: 20rpx;
  height: 100%;
  margin-right: 20rpx;
}
.form-box{
  margin-bottom: 100rpx;
}

.service-array-box{
  width: 100%;
  background-color: #fff;
  margin-bottom:24rpx;
  padding:35rpx 0;

}
.service-title{
  padding: 0 35rpx 35rpx 35rpx;
  font-size: 28rpx;
}
.service-body{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.service-item{
  margin: 10rpx 32rpx;

  border-radius: 2rem;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  background-color: #dfdfdf;
}
.select-item{
  color: #474dff;
  background-color: #aeaeff;
}
